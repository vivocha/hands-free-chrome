{
  "name": "hands-free-chrome",
  "version": "0.0.0-development",
  "description": "Headless Chrome utilities",
  "author": "Antonio Pintus <apintus@vivocha.com>",
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "directories": {
    "test": "dist/test"
  },
  "scripts": {
    "clean": "rimraf dist coverage .nyc_output",
    "clean:all": "npm run clean && rimraf node_modules",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "precommit": "npm run build && npm run cover && npm run check-coverage",
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 70 --branches 30 --functions 70 --lines 70",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "watch:test": "npm t -- -w",
    "test": "./node_modules/.bin/mocha --timeout=90000 test/*.test.js",
    "cover": "nyc --reporter=lcov --reporter=text npm t",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vivocha/hands-free-chrome.git"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    ".npmrc"
  ],
  "dependencies": {
    "chrome-remote-interface": "^0.23.2",
    "debug": "^2.6.8",
    "hapi": "^16.4.3",
    "joi": "^10.6.0",
    "lighthouse": "^2.1.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/hapi": "^16.1.5",
    "@types/joi": "^10.4.0",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.1",
    "chai": "^4.0.2",
    "chai-as-promised": "^7.0.0",
    "commitizen": "^2.9.6",
    "coveralls": "^2.13.1",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.13.4",
    "inert": "^4.2.0",
    "mocha": "^3.4.2",
    "nyc": "^11.0.2",
    "rimraf": "^2.6.1",
    "semantic-release": "^6.3.6",
    "supertest": "^3.0.0",
    "typescript": "^2.3.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
